extends layout

block content
  form.form-signin.text-center(action='/login', method='post')
    h2.form-signin-heading Homazon - Sign In
    label.sr-only(for='inputEmail') User name
    input.form-control(type='email', name='username', placeholder='Username', required='', autofocus='')
    label.sr-only(for='inputPassword') Password
    input.form-control(type='password', name='password', placeholder='Password', required='')
    button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
    a(href='/signup')  No account? Sign up now! 
    br
    a(href='/auth/facebook')  Want to login thru FB instead? 


